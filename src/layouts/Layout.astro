---
// Layout.astro
interface Props {
  title?: string;
  description?: string;
  isHome?: boolean;
}

const { 
  title = "Milton Medina | Backend Engineer", 
  description = "Especialista en Django y arquitectura de sistemas.",
  isHome = true 
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="google-site-verification" content="fRBYqOSpO2DuWeR3d52aupwKMdm0snr005b9kn5BKeA" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Fira+Code:wght@400;500;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<body>
  <nav class="navbar">
    <div class="nav-container">
      <a href="/" class="nav-brand">
        <span class="brand-accent">&lt;</span>Milton<span class="brand-accent">/&gt;</span>
      </a>
      <div class="nav-links">
        <a href="/" class="nav-link">Inicio</a>
        <a href="/blog" class="nav-link">Blog</a>
        <a href="/#proyectos" class="nav-link">Proyectos</a>
        <a href="/cv" class="nav-link">CV</a>
        <a href="mailto:miltonmce@gmail.com" class="nav-link cv-button">
          <i class="fas fa-envelope"></i> Contactar
        </a>
      </div>
    </div>
  </nav>

