---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// 1. Genera las rutas para cada post
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

// 2. Obtiene la entrada del post
const { entry } = Astro.props;
const rendered = await entry.render();
const { Content } = rendered;

// Formatear fecha
const formattedDate = entry.data.date.toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Calcular tiempo de lectura
const wordCount = rendered.html ? rendered.html.split(/\s+/).length : 0;
const readingTime = Math.ceil(wordCount / 200) || 1;
---

<Layout title={entry.data.title} description={entry.data.description} isHome={false}>
  <article class="blog-post">
    <header class="post-header">
      <div class="post-meta">
        <time class="post-date" datetime={entry.data.date.toISOString()}>
          <i class="fas fa-calendar"></i> {formattedDate}
        </time>
        <span class="reading-time">
          <i class="fas fa-clock"></i> {readingTime} min de lectura
        </span>
      </div>
      
      <h1 class="post-title">{entry.data.title}</h1>
      <p class="post-subtitle">{entry.data.description}</p>
      
      <div class="post-tags">
        {entry.data.tags.map(tag => (
          <a href={`/blog?tag=${tag}`} class="tag">{tag}</a>
        ))}
      </div>
    </header>
    
    <div class="divider"></div>
    
    <div class="content">
      <Content />
    </div>

    <footer class="post-footer">
      <div class="divider"></div>
      <div class="footer-content">
        <p>¿Te gustó este artículo?</p>
        <a href="mailto:miltonmce@gmail.com?subject=Re: {entry.data.title}" class="cta-button">
          <i class="fas fa-envelope"></i> Contactame
        </a>
      </div>
    </footer>
  </article>
</Layout>

<style>
  .blog-post {
    max-width: 900px;
    margin: 3rem auto;
    animation: fadeIn 0.6s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .post-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid var(--border-color);
  }

  .post-meta {
    display: flex;
    gap: 2rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .post-date,
  .reading-time {
    color: var(--text-muted);
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .post-title {
    font-size: 2.5rem;
    line-height: 1.2;
    margin: 1rem 0;
    color: var(--text-primary);
  }

  .post-subtitle {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .post-tags {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .tag {
    display: inline-flex;
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.15), rgba(168, 85, 247, 0.15));
    color: #06b6d4;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    border: 1px solid rgba(6, 182, 212, 0.3);
    transition: var(--transition);
  }

  .tag:hover {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.25), rgba(168, 85, 247, 0.25));
    border-color: #06b6d4;
    transform: translateY(-2px);
  }

  .divider {
    height: 1px;
    background: var(--border-color);
    margin: 2rem 0;
  }

  .content {
    line-height: 1.9;
    font-size: 1.05rem;
  }

  .content :global(h2) {
    font-size: 2rem;
    margin: 2.5rem 0 1rem;
    color: var(--text-primary);
    border-left: 4px solid #06b6d4;
    padding-left: 1rem;
  }

  .content :global(h3) {
    font-size: 1.5rem;
    margin: 2rem 0 0.75rem;
    color: var(--text-primary);
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
    color: var(--text-secondary);
  }

  .content :global(a) {
    color: #06b6d4;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: var(--transition);
  }

  .content :global(a:hover) {
    border-bottom-color: #06b6d4;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 1.5rem 0 1.5rem 2rem;
    color: var(--text-secondary);
  }

  .content :global(li) {
    margin-bottom: 0.75rem;
  }

  .content :global(blockquote) {
    border-left: 4px solid var(--accent-secondary);
    padding: 1rem 1.5rem;
    background: rgba(139, 92, 246, 0.08);
    margin: 2rem 0;
    border-radius: 6px;
    color: var(--text-secondary);
    font-style: italic;
  }

  .content :global(code) {
    font-family: 'Fira Code', monospace;
    background: rgba(6, 182, 212, 0.1);
    color: #06b6d4;
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .content :global(pre) {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 1.5rem;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .content :global(pre code) {
    background: none;
    color: var(--text-secondary);
    padding: 0;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
    border: 1px solid var(--border-color);
    box-shadow: 0 10px 30px rgba(37, 99, 235, 0.1);
  }

  .content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  .content :global(th),
  .content :global(td) {
    padding: 0.75rem 1rem;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
  }

  .content :global(th) {
    background: rgba(37, 99, 235, 0.1);
    color: var(--accent-primary);
    font-weight: 600;
  }

  .post-footer {
    margin-top: 4rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.08), rgba(168, 85, 247, 0.08));
    border-radius: 8px;
    border: 1px solid var(--border-color);
  }

  .footer-content p {
    color: var(--text-secondary);
    margin: 0;
    font-size: 1.1rem;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: linear-gradient(135deg, #06b6d4, #a78bfa);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(6, 182, 212, 0.3);
  }

  @media (max-width: 768px) {
    .blog-post {
      margin: 2rem 0;
    }

    .post-title {
      font-size: 1.75rem;
    }

    .post-meta {
      flex-direction: column;
      gap: 0.75rem;
    }

    .footer-content {
      flex-direction: column;
      gap: 1.5rem;
      text-align: center;
    }

    .content :global(h2) {
      font-size: 1.5rem;
    }
  }
</style>