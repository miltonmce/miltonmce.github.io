---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = await getCollection('blog');
// Ordena los posts por fecha (m√°s recientes primero)
const sortedPosts = posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title="Blog" description="Art√≠culos t√©cnicos y tutoriales sobre Python, Django y arquitectura de sistemas" isHome={false}>
  <div class="blog-header">
    <h1>Blog T√©cnico</h1>
    <p>Art√≠culos sobre Python, Django, arquitectura de sistemas y desarrollo backend</p>
  </div>

  {sortedPosts.length === 0 ? (
    <div class="empty-state">
      <p>No hay posts a√∫n üìù</p>
    </div>
  ) : (
    <div class="posts-container">
      {sortedPosts.map((post, index) => (
        <article class={`post-card ${index === 0 ? 'featured' : ''}`}>
          <a href={`/blog/${post.slug}`} class="post-link">
            <div class="post-content">
              <header class="post-header">
                {index === 0 && <span class="badge-featured">Destacado</span>}
                <h2 class="post-title">{post.data.title}</h2>
                <p class="post-description">{post.data.description}</p>
              </header>
              
              <footer class="post-footer">
                <time class="post-date" datetime={post.data.date.toISOString()}>
                  {new Date(post.data.date).toLocaleDateString('es-ES', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}
                </time>
                
                <div class="post-tags">
                  {post.data.tags.map(tag => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              </footer>
            </div>

            <div class="post-arrow">
              <i class="fas fa-arrow-right"></i>
            </div>
          </a>
        </article>
      ))}
    </div>
  )}
</Layout>

<style>
  .blog-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-color);
  }

  .blog-header h1 {
    font-size: 3rem;
    margin-bottom: 0.75rem;
    background: linear-gradient(135deg, #06b6d4, #a78bfa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .blog-header p {
    color: var(--text-muted);
    font-size: 1.1rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-muted);
  }

  .posts-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .post-card {
    background: linear-gradient(135deg, rgba(10, 13, 47, 0.5), rgba(30, 41, 59, 0.5));
    border: 1px solid var(--border-color);
    border-radius: 12px;
    overflow: hidden;
    transition: var(--transition);
  }

  .post-card:hover {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(168, 85, 247, 0.1));
    border-color: #06b6d4;
    transform: translateY(-4px);
    box-shadow: 0 16px 40px rgba(6, 182, 212, 0.1);
  }

  .post-card.featured {
    border-color: #06b6d4;
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.08), rgba(168, 85, 247, 0.08));
  }

  .post-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    text-decoration: none;
    color: inherit;
    gap: 2rem;
  }

  .post-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-header {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .badge-featured {
    display: inline-flex;
    width: fit-content;
    background: rgba(6, 182, 212, 0.2);
    color: #06b6d4;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .post-title {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin: 0;
    transition: var(--transition);
  }

  .post-card:hover .post-title {
    color: #06b6d4;
  }

  .post-description {
    color: var(--text-secondary);
    margin: 0;
    font-size: 1rem;
    line-height: 1.6;
  }

  .post-footer {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-top: 0.5rem;
  }

  .post-date {
    color: var(--text-muted);
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .post-date::before {
    content: "üìÖ";
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: rgba(100, 116, 139, 0.2);
    color: #06b6d4;
    padding: 0.3rem 0.75rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .post-arrow {
    color: #06b6d4;
    font-size: 1.2rem;
    opacity: 0;
    transition: var(--transition);
  }

  .post-card:hover .post-arrow {
    opacity: 1;
    transform: translateX(5px);
  }

  @media (max-width: 768px) {
    .blog-header h1 {
      font-size: 2rem;
    }

    .post-link {
      flex-direction: column;
      align-items: flex-start;
      padding: 1.5rem;
      gap: 1rem;
    }

    .post-arrow {
      opacity: 1;
    }

    .post-title {
      font-size: 1.25rem;
    }

    .post-footer {
      width: 100%;
      flex-wrap: wrap;
    }
  }
</style>