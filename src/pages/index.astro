    justify-content: center;
  }

  .visual-box {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.15), rgba(168, 85, 247, 0.15));
    border: 2px dashed rgba(6, 182, 212, 0.3);
    border-radius: 12px;
    padding: 3rem 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 2rem;
    text-align: center;
  }

  .stat {
